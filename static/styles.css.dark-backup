}

.progress-container {
    padding: 20px 0;
}

.progress-bar {
    width: 100%;
    height: 8px;
    background: rgba(102, 126, 234, 0.2);
    border-radius: 10px;
    overflow: hidden;
    margin-bottom: 30px;
}

.progress-fill {
    height: 100%;
    background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
    width: 0%;
    transition: width 0.5s ease;
    border-radius: 10px;
}

.progress-stages {
    display: flex;
    justify-content: space-between;
    gap: 20px;
    margin-bottom: 20px;
}

.progress-stage {
    flex: 1;
    text-align: center;
    opacity: 0.4;
    transition: all 0.3s ease;
}

.progress-stage.active {
    opacity: 1;
}

.progress-stage.completed {
    opacity: 0.7;
}

.stage-icon {
    font-size: 2rem;
    margin-bottom: 10px;
    filter: grayscale(100%);
    transition: filter 0.3s ease;
}

.progress-stage.active .stage-icon,
.progress-stage.completed .stage-icon {
    filter: grayscale(0%);
}

.stage-text {
    font-size: 0.9rem;
    font-weight: 500;
    color: #c0c0c0;
}

.progress-stage.active .stage-text {
    color: #667eea;
    font-weight: 600;
}

.progress-stage.completed .stage-text {
    color: #4caf50;
}

.progress-status {
    text-align: center;
    font-size: 0.95rem;
    color: #a0a0a0;
    font-style: italic;
}

/* Sortable table headers */
th.sortable {
    cursor: pointer;
    user-select: none;
    transition: background 0.2s ease;
}

th.sortable:hover {
    background: rgba(102, 126, 234, 0.15);
}

.sort-indicator {
    display: inline-block;
    margin-left: 5px;
    font-size: 0.8rem;
    color: #888;
    opacity: 0.5;
}

.sort-indicator::after {
    content: '⇅';
}

.sort-indicator.sort-asc {
    opacity: 1;
    color: #667eea;
}

.sort-indicator.sort-asc::after {
    content: '↑';
}

.sort-indicator.sort-desc {
    opacity: 1;
    color: #667eea;
}

.sort-indicator.sort-desc::after {
    content: '↓';
}
