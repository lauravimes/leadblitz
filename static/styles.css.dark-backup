}

.score-breakdown-section h3 {
    color: #667eea;
    font-size: 1.2rem;
    margin-bottom: 15px;
}

.score-total {
    text-align: center;
    padding: 20px;
    background: rgba(102, 126, 234, 0.1);
    border-radius: 8px;
}

.score-total h3 {
    margin-bottom: 10px;
}

.score-total-number {
    font-size: 3rem;
    font-weight: bold;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.score-component {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    padding: 15px;
    margin-bottom: 10px;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 8px;
    border-left: 3px solid #667eea;
}

.score-component-name {
    font-weight: 600;
    color: #fff;
    margin-bottom: 5px;
}

.score-component-rationale {
    color: #b0b0b0;
    font-size: 0.9rem;
    line-height: 1.4;
}

.score-component-value {
    font-size: 1.2rem;
    font-weight: bold;
    color: #667eea;
    white-space: nowrap;
    margin-left: 20px;
}

#scoreSummary, #scoreRecommendation {
    color: #d0d0d0;
